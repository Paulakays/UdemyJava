<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" styleClass="main-box" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.example.javafxml.HelloController">
    <stylesheets>
        <URL value="@styles.css" />
    </stylesheets>



    <!--Login Container -->
    <VBox alignment="CENTER" prefHeight="343.0" prefWidth="382.0" spacing="20" styleClass="login-box">
    <Label fx:id="welcomeText" text="User Login" />
    <HBox alignment="CENTER" spacing="20">
        <Label text="Username:" />
        <TextField />
    </HBox>
    <HBox alignment="CENTER" spacing="15">
        <Label text="Passsword:" />
        <PasswordField />
    </HBox>
    <Button onAction="#onHelloButtonClick" onMouseEntered="#onHelloButtonEntered" text="Log in" />
    </VBox>
</VBox>
