<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import java.net.*?>
<VBox styleClass="main-box" alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javafxml.HelloController">
    <stylesheets>
        <URL value="@styles.css"/>
    </stylesheets>



    <!--Login Container -->
    <VBox alignment="CENTER" styleClass="login-box" spacing="20">
    <Label fx:id="welcomeText" text = "User Login"/>
    <HBox alignment="CENTER" spacing="20">
        <Label text = "Username:"/>
        <TextField/>
    </HBox>
    <HBox alignment="CENTER" spacing="15">
        <Label text="Passsword:"/>
        <PasswordField/>
    </HBox>
    <Button text="Log in" onAction="#onHelloButtonClick" onMouseEntered="#onHelloButtonEntered" />
    </VBox>
</VBox>
